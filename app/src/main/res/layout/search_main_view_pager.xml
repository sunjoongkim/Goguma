<?xml version="1.0" encoding="utf-8"?>

<com.wowls.bottari.ui.search.pager.SearchPagerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pager_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_desc">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_store_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="28sp"
                android:textColor="#000000"
                android:text="상점명"/>

            <TextView
                android:id="@+id/text_store_state"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="영업중"
                android:background="#999999"/>

            <TextView
                android:id="@+id/text_store_distance"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#000000"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/image_store"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_image_default"/>

        <TextView
            android:id="@+id/text_store_menu"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="right"
            android:gravity="center_vertical|right"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="붕어빵 1000원"/>

    </FrameLayout>

</com.wowls.bottari.ui.search.pager.SearchPagerLayout>
