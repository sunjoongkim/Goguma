<?xml version="1.0" encoding="utf-8"?>

<com.wowls.boddari.ui.search.pager.SearchPagerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pager_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:clipChildren="false"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_17sdp"
        android:layout_marginRight="@dimen/_17sdp"
        android:elevation="@dimen/_3sdp"
        android:background="@drawable/edittext_desc">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_store_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="#363636"
                android:text="상점명"/>

            <TextView
                android:id="@+id/text_store_state"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#363636"
                android:text="영업중"
                android:background="#999999"/>

            <TextView
                android:id="@+id/text_store_distance"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#363636"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/image_store"
            android:layout_width="@dimen/_113sdp"
            android:layout_height="@dimen/_86sdp"
            android:layout_marginTop="@dimen/_46sdp"
            android:layout_marginLeft="@dimen/_13sdp"
            android:background="@drawable/sample_store_image2"/>

        <TextView
            android:id="@+id/text_store_menu"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="right"
            android:gravity="top|right"
            android:textSize="16sp"
            android:textColor="#363636"/>

    </FrameLayout>

</com.wowls.boddari.ui.search.pager.SearchPagerLayout>
