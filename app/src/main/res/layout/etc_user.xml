<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0FFF3">

    <TextView
        android:id="@+id/text_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#000000"
        android:text="계정 정보"
        />

    <TextView
        android:id="@+id/text_id"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="아이디"
        android:layout_below="@id/text_login"
        />

    <TextView
        android:id="@+id/text_user_id"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:textColor="#363636"
        android:textSize="20sp"
        android:layout_below="@id/text_login"
        android:layout_toRightOf="@id/text_id"
        />

    <TextView
        android:id="@+id/text_nick"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="닉네임"
        android:layout_below="@id/text_id"
        />

    <TextView
        android:id="@+id/text_user_nick"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:textColor="#363636"
        android:textSize="20sp"
        android:layout_below="@id/text_user_id"
        android:layout_toRightOf="@id/text_nick"
        />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="로그아웃"
        android:layout_below="@id/text_user_nick"
        />

</RelativeLayout>